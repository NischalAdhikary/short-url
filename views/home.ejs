<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
       
    </style>
</head>
<body>
    <h1>Show ShortId</h1>
  <form method="post" action="/url">
    <label>Enter the Url</label>
    <input type="text" placeholder="https:/?youtube.com" name="url">
    <button type="submit">Submit</button>
   <% if (locals.id) { %>
    <p>Url generated:<a>http://localhost:8001/<%= id %></a></p>
   
  <% } %>

  </form>
  <div>
    <% if (locals.urls) { %>
        <table>
            <thead>
                <tr>
                    <th>S.No</th>
                    <th>ShortID</th>
                    <th>Redirect</th>
                </tr>
            </thead>
            <tbody>
                <% urls.forEach((url, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= url.shortId %></td>
                        <td><%= url.redirectURL %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>
</div>
     
    
</body>
</html>